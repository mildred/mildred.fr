%p.meta
  %span.date-time
    %span.date= node['created_at'].strftime('%a %d %b %Y,')
    %span.time= node['created_at'].strftime('%I:%M %p')
  - if node['author']
    %span.author
      by
      %span.author-name
        = node['author']
  - if node['tags']
    %span.tags
      - node['tags'].sort.each do |tag|
        %span.tag
          %a{:href => link_path("./tags/#{tag}/"), :class => 'tag'}= tag
